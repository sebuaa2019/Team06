<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/black"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="0.5dp">
        <shape>
            <solid android:color="@color/white"/>
            <padding
                android:bottom="20dp"
                android:left="10dp"
                android:right="10dp"
                android:top="20dp"/>
        </shape>
    </item>
</layer-list>